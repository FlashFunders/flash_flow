#!/usr/bin/env ruby

require 'flash_flow'

options = FlashFlow::Options.parse
FlashFlow::Config.configure!(options[:config_file])
case
  when options[:prod_deploy]
    FlashFlow::IssueTracker::Base.new.production_deploy
  when options[:review_deploy]
    FlashFlow::IssueTracker::Base.new.stories_delivered
  else
    FlashFlow::Deploy.new(options).run
    FlashFlow::IssueTracker::Base.new.stories_pushed
end
